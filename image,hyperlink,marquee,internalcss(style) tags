        /* Style for the marquee */
        #marqueeContainer {
            width: 100%;
            height: 50px;
            overflow: hidden;
            background-color: lightgray;
        }

        #marqueeText {
            display: inline-block;
            white-space: nowrap;
            animation: marqueeScroll 10s linear infinite;
        }

        /* Animation for the marquee */
        @keyframes marqueeScroll {
            0% {
                transform: translateX(100%);
            }

            100% {
                transform: translateX(-100%);
            }
        }
    </style>
